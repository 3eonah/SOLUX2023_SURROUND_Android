<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택되지 않은 상태 -->
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/roundsquare" />
        </layer-list>
    </item>

    <!-- 선택된 상태 -->
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/selected_roundsquare" />
        </layer-list>
    </item>

    <!-- 선택 해제 상태 -->
    <item android:state_checked="false" android:state_window_focused="true">
        <layer-list>
            <item android:drawable="@drawable/roundsquare" />
        </layer-list>
    </item>
</selector>