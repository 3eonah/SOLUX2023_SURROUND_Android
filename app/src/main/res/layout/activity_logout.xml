<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/logoutConfirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 로그아웃\n하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"/>

    <Button
        android:id="@+id/Yesbtn"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:background="@drawable/white_background"
        android:text="네,\n금방 돌아올게요."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoutConfirmText"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.15"/>

    <Button
        android:id="@+id/Nobtn"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:background="@drawable/selector_green_background"
        android:text="아니요,\n계속 있을거예요."
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoutConfirmText"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.85"/>


</androidx.constraintlayout.widget.ConstraintLayout>