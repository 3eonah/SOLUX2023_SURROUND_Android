<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <!-- 외부 저장소 접근 권한 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 카카오 REST API이용을 위한 APP KEY   -->

    <meta-data android:name="com.kakao.sdk.AppKey" android:value="332e0c6513db0104e361758ea011774a
"/>

    <application
        android:name=".user_login_join.GlobalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".market.MarketholderActivity"
            android:exported="false" />
        <activity
            android:name=".market.MarketitemActivity"
            android:exported="false" />
        <activity
            android:name=".community.CommunityitemActivity"
            android:exported="false" />
        <activity
            android:name=".community.CommunityholderActivity"
            android:exported="false" /> <!-- 앱이 시작될 때 실행 -->

        <!-- 앱이 시작될 때 실행-->
        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="oauth"
                    android:scheme= "03078ebb94144613f5c84a04ddb3a172" />
            </intent-filter>
        </activity>

        <!--Splash-->
        <activity
            android:name=".splash.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user_login_join.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".user_login_join.JoinActivity">
        </activity>

        <activity
            android:name=".user_login_join.LogoutActivity">
        </activity>

        <activity
            android:name=".home.HomeActivity"
            android:exported="true"
            android:label="surround-home"
            android:theme="@style/AppTheme">
        </activity>


        <!--   검색창 기능을 위함     -->


        <activity android:name=".set_location.SetLocationActivity"
            android:label="Set User Location Activity"
            android:parentActivityName=".home.HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".set_location.SearchAddressActivity"
            android:label="Search Address"
            android:theme="@style/AppTheme"
            android:parentActivityName=".set_location.SetLocationActivity"/>


        <activity android:name=".community_post.CommunityPostActivity"
            android:label="community post"
            android:theme="@style/AppTheme"/>

        <activity android:name=".posting.CommunityPostingActivity"
            android:label="posting on community"
            android:theme="@style/AppTheme"/>

        <activity android:name=".market_post.MarketPostActivity"
            android:label="market post"
            android:theme="@style/AppTheme"/>

        <activity android:name=".posting.MarketPostingActivity"
            android:label="posting on market"
            android:theme="@style/AppTheme"/>

        <activity android:name=".posting.MarketOptionSettingActivity"
            android:label="setting market option during posting on market"
            android:theme="@style/AppTheme"/>

        <activity android:name=".market_post.JoinMarketActivity"
            android:label="join at market post"
            android:theme="@style/AppTheme" />



        <!--   마이페이지    -->

        <activity android:name=".mypage.MypageActivity"
            android:label="Mypage"
            android:theme="@style/AppTheme" />

        <activity android:name=".market_log.MarketLogOpenActivity"
            android:label="MarketLogOpenActivity"
            android:theme="@style/AppTheme" />

        <activity android:name=".market_log.MarketLogJoinActivity"
            android:label="MarketLogJoinActivity"
            android:theme="@style/AppTheme" />

        <activity android:name=".community_log.CommunityLogActivity"
            android:label="CommunityLogActivity"
            android:theme="@style/AppTheme" />


    </application>

</manifest>